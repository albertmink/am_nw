% command line parameter.  The default height is 10mm.

\ProvidesPackage{master/templates/KIT-Bullet}
\RequirePackage{pgf}
\RequirePackage{helvet}

\makeatletter
\newlength{\KITBulletUnit}
\newlength{\KITBulletCornerRadius}

\definecolor{KITBulletGreen}{rgb}{0.0,0.58,0.49}

\newcommand{\KITBullet}[1][10mm]{%
\setlength{\KITBulletUnit}{#1}%
\divide\KITBulletUnit by 100%
\setlength{\KITBulletCornerRadius}{\KITBulletUnit}%
\multiply\KITBulletCornerRadius 20%
\begin{pgfpicture}
  % Bullet ist gruen
  \pgfsetcolor{KITBulletGreen}

  \pgfpathmoveto{\pgfpoint{100\KITBulletUnit}{000\KITBulletUnit}}
  \pgfpathlineto{\pgfpointadd{\pgfpoint{100\KITBulletUnit}{-\KITBulletCornerRadius}}{\pgfpoint{000\KITBulletUnit}{100\KITBulletUnit}}}
  \pgfpatharc{000}{90}{\KITBulletCornerRadius}
  \pgfpathlineto{\pgfpoint{000\KITBulletUnit}{100\KITBulletUnit}}
  \pgfpathlineto{\pgfpoint{000\KITBulletUnit}{\KITBulletCornerRadius}}
  \pgfpatharc{180}{270}{\KITBulletCornerRadius}
  \pgfpathclose
  \pgfusepath{fill}
\end{pgfpicture}}
\makeatother
