\ProvidesPackage{master/templates/beamercolorthemeKIT}

\usepackage{beamercolorthemeorchid}

\mode<presentation>

\definecolor{UK@green}{rgb}{0.0,0.5,0.0}        % use structure theme to change
\definecolor{KIT@green}{rgb}{0.0,0.58,0.49}     % use structure theme to change
\definecolor{KIT@gray}{rgb}{0.84,0.84,0.85}     % use structure theme to change
\definecolor{KIT@darkgray}{rgb}{0.49,0.49,0.50} % use structure theme to change

\setbeamercolor{structure}{fg=KIT@green}

\setbeamercolor{palette secondary}{fg=structure.fg!75!white}
\setbeamercolor{palette tertiary}{fg=structure.fg!50!white}

\setbeamercolor{palette sidebar secondary}{use=normal text,fg=normal text.fg!75!white}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=normal text.fg!50!white}

\setbeamercolor*{section in head/foot}{parent=palette sidebar secondary}
\setbeamercolor*{section in sidebar}{use=palette sidebar tertiary,fg=palette sidebar tertiary.fg}

\setbeamercolor*{author in head/foot}{parent=palette sidebar tertiary}
\setbeamercolor*{author in sidebar}{use=palette sidebar tertiary,fg=palette sidebar tertiary.fg}

\setbeamercolor*{title}{fg=black}
\setbeamercolor*{title in head/foot}{parent=palette sidebar tertiary}
\setbeamercolor*{title in sidebar}{use=palette sidebar tertiary,fg=palette sidebar tertiary.fg}

\setbeamercolor*{frametitle}{fg=black}

\setbeamercolor*{date in head/foot}{parent=palette sidebar tertiary}
\setbeamercolor*{date in sidebar}{use=palette sidebar tertiary,fg=palette sidebar tertiary.fg}

\setbeamercolor*{page number in head/foot}{parent=palette sidebar tertiary}
\setbeamercolor*{date in sidebar}{use=palette sidebar tertiary,fg=palette sidebar tertiary.fg}

\setbeamercolor*{navigation symbols}{use=palette sidebar tertiary,fg=palette sidebar tertiary.fg!75!white}
\setbeamercolor*{navigation symbols dimmed}{use=palette sidebar tertiary,fg=palette sidebar tertiary.fg!50!white}

\setbeamercolor*{KIT navigation symbols}{parent=navigation symbols}
\setbeamercolor*{KIT navigation symbols dimmed}{parent=navigation symbols dimmed}

\mode
<ALL>
